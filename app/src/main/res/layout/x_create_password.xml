<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center | top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/close_actvity_create_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000"
            android:src="@drawable/close_x"
            android:contentDescription="@string/close_activity_x_X" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="fill"
            android:padding="20dp"
            android:src="@drawable/x"
            android:contentDescription="@string/x_logo_icon_description_text" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:textColor="#fff"
        android:textSize="30sp"
        android:text="Create Password"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <EditText
            android:id="@+id/to_x_2"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/custom_x_border"
            android:textColor="#ffffff"
            android:textColorHint="#aaaaaa"
            android:hint="New Password"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/custom_x_border"
            android:hint="Confirm Password"
            android:textColorHint="#aaaaaa"/>

    </TableLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="300dp"
        android:background="@drawable/custom_x_white_button_background"
        android:text="CONTINUE"
        android:textColor="#000"
        android:textSize="24sp"/>

</LinearLayout>